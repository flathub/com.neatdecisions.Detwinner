{
  "app-id": "com.neatdecisions.Detwinner",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.38",
  "sdk": "org.gnome.Sdk",
  "command": "detwinner",
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--filesystem=host",
    "--filesystem=xdg-config/gtk-3.0",
    "--talk-name=org.gtk.vfs",
    "--talk-name=org.gtk.vfs.*",
    "--talk-name=org.freedesktop.portal.Trash"
  ],
  "cleanup": [
    "/bin/gm",
    "/bin/GraphicsMagick*",
    "/bin/mm-common*",
    "/include",
    "/lib/atkmm*",
    "/lib/cairomm*",
    "/lib/cmake",
    "/lib/debug",
    "/lib/gdkmm*",
    "/lib/giomm*",
    "/lib/glibmm*",
    "/lib/GraphicsMagick*",
    "/lib/gtkmm*",
    "/lib/pangomm*",
    "/lib/pkgconfig",
    "/lib/sigc++*",
    "/share/aclocal",
    "/share/doc",
    "/share/GraphicsMagick*",
    "/share/man",
    "/share/mm-common",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "graphicsmagick",
      "builddir": true,
      "config-opts": [
        "--enable-shared",
        "--disable-static",
        "--with-quantum-depth=16",
        "--with-threads",
        "--without-dps",
        "--without-lcms2",
        "--without-perl",
        "--without-trio",
        "--without-ttf",
        "--without-wmf",
        "--without-x"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://downloads.sourceforge.net/project/graphicsmagick/graphicsmagick/1.3.35/GraphicsMagick-1.3.35.tar.gz",
          "sha256":"d96d5ce2ef7e0e90166551e38742713728bfd33d6f18495a9ddda938700fc055"
        }
      ]
    },
    {
      "name" : "mm-common",
      "sources" : [
        {
          "type" : "archive",
          "url" : "https://download.gnome.org/sources/mm-common/1.0/mm-common-1.0.2.tar.xz",
          "sha256" : "a2a99f3fa943cf662f189163ed39a2cfc19a428d906dd4f92b387d3659d1641d"
        }
      ]
    },
    {
      "name": "sigc++",
      "config-opts": [
        "--disable-documentation"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://ftp.gnome.org/pub/GNOME/sources/libsigc++/2.10/libsigc++-2.10.4.tar.xz",
          "sha256": "1f5874358d9a21379024a4f4edba80a8a3aeb33f0531b192a6b1c35ed7dbfa3e"
        }
      ]
    },
    {
      "name": "glibmm",
      "config-opts": [
        "--disable-documentation"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://ftp.gnome.org/pub/GNOME/sources/glibmm/2.64/glibmm-2.64.2.tar.xz",
          "sha256": "a75282e58d556d9b2bb44262b6f5fb76c824ac46a25a06f527108bec86b8d4ec"
        }
      ]
    },
    {
      "name": "cairomm",
      "config-opts": [
        "--disable-documentation"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://www.cairographics.org/releases/cairomm-1.14.2.tar.xz",
          "sha256": "0126b9cc295dc36bc9c0860d5b720cb5469fd78d5620c8f10cc5f0c07b928de3"
        }
      ]
    },
    {
      "name": "pangomm",
      "config-opts": [
        "--disable-documentation"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://ftp.gnome.org/pub/GNOME/sources/pangomm/2.42/pangomm-2.42.1.tar.xz",
          "sha256": "14bf04939930870d5cfa96860ed953ad2ce07c3fd8713add4a1bfe585589f40f"
        }
      ]
    },
    {
      "name": "atkmm",
      "config-opts": [
        "--disable-documentation"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://ftp.gnome.org/pub/GNOME/sources/atkmm/2.28/atkmm-2.28.0.tar.xz",
          "sha256": "4c4cfc917fd42d3879ce997b463428d6982affa0fb660cafcc0bc2d9afcedd3a"
        }
      ]
    },
    {
      "name": "gtkmm",
      "config-opts": [
        "--disable-documentation"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://ftp.acc.umu.se/pub/GNOME/sources/gtkmm/3.24/gtkmm-3.24.2.tar.xz",
          "sha256":"6d71091bcd1863133460d4188d04102810e9123de19706fb656b7bb915b4adc3"
        }
      ]
    },
    {
      "name": "gtest",
      "buildsystem": "cmake",
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/google/googletest/archive/release-1.10.0.tar.gz",
          "sha256": "9dc9157a9a1551ec7a7e43daea9a694a0bb5fb8bec81235d8a1e6ef64c716dcb"
        }
      ]
    },
    {
      "name": "detwinner",
      "buildsystem": "meson",
      "builddir": true,
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/neatdecisions/detwinner/archive/v0.4.0.tar.gz",
          "sha256": "e3eb5617d184075bea1bd182ffd73aee6f4933cb8c214b90758e41ada01ba538"
        }
      ]
    }
  ]
}
