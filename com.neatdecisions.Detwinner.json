{
  "app-id": "com.neatdecisions.Detwinner",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.36",
  "sdk": "org.gnome.Sdk",
  "command": "detwinner",
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--filesystem=host",
    "--filesystem=xdg-config/gtk-3.0",
    "--talk-name=org.gtk.vfs",
    "--talk-name=org.gtk.vfs.*",
    "--talk-name=org.freedesktop.portal.Trash"
  ],
  "cleanup": [
    "/bin/gm",
    "/bin/GraphicsMagick*",
    "/include",
    "/lib/atkmm*",
    "/lib/cairomm*",
    "/lib/cmake",
    "/lib/debug",
    "/lib/gdkmm*",
    "/lib/giomm*",
    "/lib/glibmm*",
    "/lib/GraphicsMagick*",
    "/lib/gtkmm*",
    "/lib/pangomm*",
    "/lib/pkgconfig",
    "/lib/sigc++*",
    "/share/doc",
    "/share/GraphicsMagick*",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "graphicsmagick",
      "builddir": true,
      "config-opts": [
        "--enable-shared",
        "--disable-static",
        "--with-quantum-depth=16",
        "--with-threads",
        "--without-dps",
        "--without-lcms2",
        "--without-perl",
        "--without-trio",
        "--without-ttf",
        "--without-wmf",
        "--without-x"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://downloads.sourceforge.net/project/graphicsmagick/graphicsmagick/1.3.35/GraphicsMagick-1.3.35.tar.gz",
          "sha256":"d96d5ce2ef7e0e90166551e38742713728bfd33d6f18495a9ddda938700fc055"
        }
      ]
    },
    {
      "name": "sigc++",
      "config-opts": [
        "--disable-documentation"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://ftp.gnome.org/pub/GNOME/sources/libsigc++/2.10/libsigc++-2.10.2.tar.xz",
          "sha256": "b1ca0253379596f9c19f070c83d362b12dfd39c0a3ea1dd813e8e21c1a097a98"
        }
      ]
    },
    {
      "name": "glibmm",
      "config-opts": [
        "--disable-documentation"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://ftp.gnome.org/pub/GNOME/sources/glibmm/2.64/glibmm-2.64.2.tar.xz",
          "sha256": "a75282e58d556d9b2bb44262b6f5fb76c824ac46a25a06f527108bec86b8d4ec"
        }
      ]
    },
    {
      "name": "cairomm",
      "config-opts": [
        "--disable-documentation"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://www.cairographics.org/releases/cairomm-1.12.2.tar.gz",
          "sha256": "45c47fd4d0aa77464a75cdca011143fea3ef795c4753f6e860057da5fb8bd599"
        }
      ]
    },
    {
      "name": "pangomm",
      "config-opts": [
        "--disable-documentation"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://ftp.gnome.org/pub/GNOME/sources/pangomm/2.42/pangomm-2.42.1.tar.xz",
          "sha256": "14bf04939930870d5cfa96860ed953ad2ce07c3fd8713add4a1bfe585589f40f"
        }
      ]
    },
    {
      "name": "atkmm",
      "config-opts": [
        "--disable-documentation"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://ftp.gnome.org/pub/GNOME/sources/atkmm/2.28/atkmm-2.28.0.tar.xz",
          "sha256": "4c4cfc917fd42d3879ce997b463428d6982affa0fb660cafcc0bc2d9afcedd3a"
        }
      ]
    },
    {
      "name": "gtkmm",
      "config-opts": [
        "--disable-documentation"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://ftp.acc.umu.se/pub/GNOME/sources/gtkmm/3.24/gtkmm-3.24.2.tar.xz",
          "sha256":"6d71091bcd1863133460d4188d04102810e9123de19706fb656b7bb915b4adc3"
        }
      ]
    },
    {
      "name": "gtest",
      "buildsystem": "cmake",
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/google/googletest/archive/release-1.8.1.tar.gz",
          "sha256": "9bf1fe5182a604b4135edc1a425ae356c9ad15e9b23f9f12a02e80184c3a249c"
        }
      ]
    },
    {
      "name": "detwinner",
      "buildsystem": "meson",
      "builddir": true,
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/neatdecisions/detwinner/archive/v0.3.4.tar.gz",
          "sha256": "bc7a612f5f8da674adddd6c09739a39663c9e909b77b330464339edb0076ac16"
        }
      ]
    }
  ]
}
