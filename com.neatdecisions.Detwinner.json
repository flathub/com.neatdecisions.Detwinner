{
  "app-id": "com.neatdecisions.Detwinner",
  "runtime": "org.gnome.Platform",
  "runtime-version": "40",
  "sdk": "org.gnome.Sdk",
  "command": "detwinner",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--filesystem=host",
    "--filesystem=xdg-config/gtk-3.0",
    "--talk-name=org.gtk.vfs",
    "--filesystem=xdg-run/gvfsd",
    "--talk-name=org.gtk.vfs.*",
    "--talk-name=org.freedesktop.portal.Trash"
  ],
  "cleanup": [
    "/bin/gm",
    "/bin/GraphicsMagick*",
    "/bin/mm-common*",
    "/include",
    "/lib/atkmm*",
    "/lib/cairomm*",
    "/lib/cmake",
    "/lib/debug",
    "/lib/gdkmm*",
    "/lib/giomm*",
    "/lib/glibmm*",
    "/lib/GraphicsMagick*",
    "/lib/gtkmm*",
    "/lib/pangomm*",
    "/lib/pkgconfig",
    "/lib/sigc++*",
    "/share/aclocal",
    "/share/doc",
    "/share/GraphicsMagick*",
    "/share/man",
    "/share/mm-common",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "graphicsmagick",
      "builddir": true,
      "config-opts": [
        "--enable-shared",
        "--disable-compressed-files",
        "--disable-static",
        "--with-quantum-depth=16",
        "--with-threads",
        "--without-dps",
        "--without-gs",
        "--without-lcms2",
        "--without-perl",
        "--without-trio",
        "--without-ttf",
        "--without-wmf",
        "--without-x"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://downloads.sourceforge.net/project/graphicsmagick/graphicsmagick/1.3.37/GraphicsMagick-1.3.37.tar.gz",
          "sha256":"1020fe55e11d7647bb11d34698a4665d573bf1d3bbf9711254d960312338e399"
        }
      ]
    },
    {
      "name" : "mm-common",
      "buildsystem": "meson",
      "sources" : [
        {
          "type" : "archive",
          "url" : "https://download.gnome.org/sources/mm-common/1.0/mm-common-1.0.3.tar.xz",
          "sha256" : "e81596625899aacf1d0bf27ccc2fcc7f373405ec48735ca1c7273c0fbcdc1ef5"
        }
      ]
    },
    {
      "name": "sigc++",
      "buildsystem": "meson",
      "config-opts": [
        "-Dbuild-examples=false"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://ftp.gnome.org/pub/GNOME/sources/libsigc++/2.10/libsigc++-2.10.7.tar.xz",
          "sha256": "d082a2ce72c750f66b1a415abe3e852df2eae1e8af53010f4ac2ea261a478832"
        }
      ]
    },
    {
      "name": "glibmm",
      "buildsystem": "meson",
      "config-opts": [
        "-Dbuild-examples=false"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://ftp.gnome.org/pub/GNOME/sources/glibmm/2.66/glibmm-2.66.2.tar.xz",
          "sha256": "b2a4cd7b9ae987794cbb5a1becc10cecb65182b9bb841868625d6bbb123edb1d"
        }
      ]
    },
    {
      "name": "cairomm",
      "buildsystem": "meson",
      "config-opts": [
        "-Dbuild-examples=false"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://www.cairographics.org/releases/cairomm-1.14.3.tar.xz",
          "sha256": "0d37e067c5c4ca7808b7ceddabfe1932c5bd2a750ad64fb321e1213536297e78"
        }
      ]
    },
    {
      "name": "pangomm",
      "buildsystem": "meson",
      "config-opts": [
        "-Dbuild-examples=false"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://ftp.gnome.org/pub/GNOME/sources/pangomm/2.46/pangomm-2.46.2.tar.xz",
          "sha256": "57442ab4dc043877bfe3839915731ab2d693fc6634a71614422fb530c9eaa6f4"
        }
      ]
    },
    {
      "name": "gtkmm",
      "buildsystem": "meson",
      "config-opts": [
        "-Dbuild-examples=false",
        "-Dbuild-demos=false",
        "-Dbuild-tests=false",
        "-Dbuild-x11-api=false",
        "-Dbuild-atkmm-api=false"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://ftp.acc.umu.se/pub/GNOME/sources/gtkmm/3.24/gtkmm-3.24.5.tar.xz",
          "sha256":"856333de86689f6a81c123f2db15d85db9addc438bc3574c36f15736aeae22e6"
        }
      ]
    },
    {
      "name": "gtest",
      "buildsystem": "cmake",
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/google/googletest/archive/refs/tags/release-1.11.0.tar.gz",
          "sha256": "b4870bf121ff7795ba20d20bcdd8627b8e088f2d1dab299a031c1034eddc93d5"
        }
      ]
    },
    {
      "name": "detwinner",
      "buildsystem": "meson",
      "builddir": true,
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/neatdecisions/detwinner/archive/v0.4.1.tar.gz",
          "sha256": "08e348dff6ac40cec5f6bf3bd1ab4d7fbcde0932550a682d3171b5c1c34f7ffe"
        }
      ]
    }
  ]
}
